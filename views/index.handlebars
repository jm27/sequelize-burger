<div class="container"
    style="background-image: url(http://www.photos-public-domain.com/wp-content/uploads/2012/03/bamboo-cutting-board-texture.jpg);">
    <div class="jumbotron text-white justify-content-center text-center" style="background: none;">
        {{!-- Title header --}}
        <div class="row justify-content-center text-center">
            <h1 class="font-weight-bold"> Eat da burger!!</h1>
        </div>
        {{!-- Title header --}}
        {{!-- Text input and logo --}}
        <div class="row">
            <div class="col-12">
                <form class="create-form">
                    <img src="assets/img/burger-logo.png" style="padding-bottom: 12px;">
                    <div class="form-group">
                        <input type="text" placeholder="Burger Name" id="bu" name="name">
                    </div>
                    <button class="btn btn-dark-green" type="submit">Add Burger</button>
                </form>
            </div>
        </div>
        {{!-- Text input and logo --}}
        {{!-- Devoured and waiting Burgers list --}}
        <div class="row">
            <div class="col-6">
                <h1> Waiting to be eaten!!</h1>
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    <li>{{this.burger_name}}</li>{{>burgers/burger-block}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col-6">
                <h1> Devoured!!</h1>
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    <li>{{this.burger_name}}</li>{{>burgers/burger-block}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
        {{!-- Devoured and waiting Burgers list --}}
    </div>
</div>